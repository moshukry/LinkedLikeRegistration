
@{
    ViewBag.Title = "changeprofile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Change Profile</h2>

<div style="width:40%; margin:50px auto;border-radius:10px;">
    <form method="post">
        <p>@ViewBag.notmatch</p>
        <p>@ViewBag.wrongpass</p>
        <div class="form-group">
            <label for="oldpass">Old Password</label>
            <input type="password" name="oldpass" class="form-control" />
        </div>
        <div class="form-group">
            <label for="oldpass">New Password</label>
            <input type="password" name="newpass" class="form-control" />
        </div>
        <div class="form-group">
            <label for="oldpass">Confirm Password</label>
            <input type="password" name="confirmpass" class="form-control" />
        </div>
        <input type="submit" class="btn btn-danger" />
    </form>
</div>